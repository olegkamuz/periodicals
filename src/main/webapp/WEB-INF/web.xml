<?xml version="1.0" encoding="UTF-8"?>

<!--============================================================
	Deployment Descriptor: web.xml
=============================================================-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee https://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

    <display-name>Periodical</display-name>

    <!--    <welcome-file-list>-->
    <!--        <welcome-file>index.jsp</welcome-file>-->
    <!--    </welcome-file-list>-->


    <!--============================================================
        i18n support
    =============================================================-->
    <!-- this way we set the resource bundle name -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>resources</param-value>
    </context-param>

    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ru</param-value>
    </context-param>

    <!-- supported locales -->
    <context-param>
        <param-name>locales</param-name>
        <param-value>ru en</param-value>
    </context-param>


    <!--============================================================
        Controller
    =============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.training.periodical.controller.controller.Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/index</url-pattern>
        <url-pattern>/one-category-magazines</url-pattern>
        <url-pattern>/one-category-magazines?*</url-pattern>
        <url-pattern>/create-subscription</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/login-check</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <!--============================================================
        Encoding support filter
    =============================================================-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.training.periodical.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>


    <!--============================================================
        Security filter.
        1) admin: admin commands
        2) client: client commands
        3) commons: commands for all roles
        4) out-of-control: commands without access control
        Delimiter - space/tab
    =============================================================-->
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.training.periodical.controller.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>listOrders</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>listMenu create-subscription</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>noCommand viewSettings updateSettings</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>index login login-check logout one-category-magazines</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>


    <!--============================================================
        Context listener
    =============================================================-->
    <!--    <listener>
            <listener-class>ContextListener</listener-class>
        </listener>-->


    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

</web-app>