<%@ include file="/WEB-INF/jspf/directive/page.jspf" %>
<%@ include file="/WEB-INF/jspf/directive/taglib.jspf" %>

<c:url var="url_command" value="${fn:replace(fn:replace(fn:replace(fn:replace(pageContext.request.requestURL, '.jsp', ''),'WEB-INF/jsp/admin/', ''),'WEB-INF/jsp/client/', '' ), 'WEB-INF/jsp/','')}">
</c:url>

<c:url var="url_clean" value="${fn:replace(pageContext.request.requestURL, pageContext.request.requestURI, '')}/">
</c:url>
<div id="header">
    <a class="home" href="${url_clean}index<c:if test='${not empty pre_sub_sort or not empty pre_sub_filter or not empty pre_sub_page}'>?</c:if><c:if test='${not empty pre_sub_sort}'>&sort=${pre_sub_sort}</c:if><c:if test='${not empty pre_sub_filter}'>&filter=${pre_sub_filter}</c:if><c:if test='${not empty pre_sub_page}'>&page=${pre_sub_page}</c:if>">
        <fmt:message key="header_jspf.anchor.home"/>
    </a>


        <c:if test="${not empty user}">
        <div id="leftHeader">
                <a href="${url_clean}view-settings">
                <fmt:message key="header_jspf.anchor.settings"/>
            </a>
        </div>
        <div class="rightHeader
            <c:if test="${userRole.name eq 'admin'}">
                admin_header
            </c:if>
            ">
            <div class="locale">
                <div class="dropdown show dropdown_custom">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button"
                       id="dropdownMenuLinkFilter"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <c:set var="ru" value="ru"/>
                        <c:set var="en" value="en"/>
                        <c:choose>
                            <c:when test="${defaultLocale eq ru}">
                                <option value="">
                                    <fmt:message key="index_jsp.label.language.russian"/>
                                </option>
                            </c:when>
                            <c:when test="${defaultLocale eq en}">
                                <option value="">
                                    <fmt:message key="index_jsp.label.language.english"/>
                                </option>
                            </c:when>
                            <c:otherwise>
                                <option value="">
                                    <fmt:message key="index_jsp.label.choose"/>
                                </option>
                            </c:otherwise>
                        </c:choose>
                    </a>
                    <div class="dropdown-menu dropdown-menu-custom" aria-labelledby="dropdownMenuLinkFilter">
                        <c:url var="url" value="${url_command}">
                            <c:forEach items="${param}" var="entry">
                                <c:if test="${
                                         entry.key != 'magazineId' &&
                                         entry.key != 'reset_checked' &&
                                         entry.key != 'login' &&
                                         entry.key != 'password' &&
                                         entry.key != 'localeToSet'
                                         }">
                                    <c:param name="${entry.key}" value="${entry.value}"/>
                                </c:if>
                            </c:forEach>
                            <c:param name="localeToSet" value="ru"/>
                        </c:url>
                        <a class="dropdown-item"
                           href="<c:out value='${url}'/>">
                            <fmt:message key="index_jsp.label.language.russian"/>
                        </a>

                        <c:url var="url" value="${url_command}">
                            <c:forEach items="${param}" var="entry">
                                <c:if test="${
                                         entry.key != 'magazineId' &&
                                         entry.key != 'reset_checked' &&
                                         entry.key != 'login' &&
                                         entry.key != 'password' &&
                                         entry.key != 'localeToSet'
                                         }">
                                    <c:param name="${entry.key}" value="${entry.value}"/>
                                </c:if>
                            </c:forEach>
                            <c:param name="localeToSet" value="en"/>
                        </c:url>
                        <a class="dropdown-item"
                           href="<c:out value='${url}'/>">
                            <fmt:message key="index_jsp.label.language.english"/>
                        </a>
                    </div>
                </div>
            </div>

            <div class="cabinet">
                <a href="<c:if test="${not empty userRole}">
                        <c:if test="${userRole.name eq 'admin'}">
                            admin-cabinet
                        </c:if>
                        <c:if test="${userRole.name eq 'client'}">
                            user-cabinet
                        </c:if>
                    </c:if>

            ">
                    <c:out value="${user.firstName} ${user.lastName}"/>

                    <c:if test="${userRole.name eq 'admin'}">
                        <c:out value="(${userRole.name})"/>
                    </c:if>
                </a>
            </div>
            <div class="logout">
                <a href="${url_clean}logout">
                    <fmt:message key="header_jspf.anchor.logout"/>
                </a>
            </div>
        </div>
    </c:if>

    <c:if test="${empty user}">
        <div class="rightHeader">
            <div class="locale">
                <div class="dropdown show dropdown_custom">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button"
                       id="dropdownMenuLinkLanguageGuest"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <c:set var="ru" value="ru"/>
                        <c:set var="en" value="en"/>
                        <c:choose>
                            <c:when test="${defaultLocale eq ru}">
                                <option value="">
                                    <fmt:message key="index_jsp.label.language.russian"/>
                                </option>
                            </c:when>
                            <c:when test="${defaultLocale eq en}">
                                <option value="">
                                    <fmt:message key="index_jsp.label.language.english"/>
                                </option>
                            </c:when>
                            <c:otherwise>
                                <option value="">
                                    <fmt:message key="index_jsp.label.choose"/>
                                </option>
                            </c:otherwise>
                        </c:choose>
                    </a>
                    <div class="dropdown-menu dropdown-menu-custom" aria-labelledby="dropdownMenuLinkFilter">
                        <c:url var="url" value="${url_command}">
                            <c:forEach items="${param}" var="entry">
                                <c:if test="${
                                         entry.key != 'magazineId' &&
                                         entry.key != 'reset_checked' &&
                                         entry.key != 'login' &&
                                         entry.key != 'password' &&
                                         entry.key != 'localeToSet'
                                         }">
                                    <c:param name="${entry.key}" value="${entry.value}"/>
                                </c:if>
                            </c:forEach>
                            <c:param name="localeToSet" value="ru"/>
                        </c:url>
                        <a class="dropdown-item"
                           href="<c:out value='${url}'/>">
                            <fmt:message key="index_jsp.label.language.russian"/>
                        </a>

                        <c:url var="url" value="${url_command}">
                            <c:forEach items="${param}" var="entry">
                                <c:if test="${
                                         entry.key != 'magazineId' &&
                                         entry.key != 'reset_checked' &&
                                         entry.key != 'login' &&
                                         entry.key != 'password' &&
                                         entry.key != 'localeToSet'
                                         }">
                                    <c:param name="${entry.key}" value="${entry.value}"/>
                                </c:if>
                            </c:forEach>
                            <c:param name="localeToSet" value="en"/>
                        </c:url>
                        <a class="dropdown-item"
                           href="<c:out value='${url}'/>">
                            <fmt:message key="index_jsp.label.language.english"/>
                        </a>
                    </div>
                </div>
            </div>
            <c:if test="${empty user and title ne 'Login'}">
                <div id="login">
                    <a href="${url_clean}login">
                        <fmt:message key="header_jspf.anchor.login"/>
                    </a>
                </div>
            </c:if>
        </div>
    </c:if>
</div>

